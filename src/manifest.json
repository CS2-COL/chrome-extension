{
    "manifest_version": 3,
    "name": "[CS2COL] - Case Opening Stats Tracker",
    "version": "1.0.5",
    "description": "Track your CS2 case stats & find out if you're lucky! Upload your case opening history to caseopening.live, view insights, and share results.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://steamcommunity.com/*",
        "https://caseopening.live/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://steamcommunity.com/*"],
            "js": ["content.js"],
            "css": ["styles.css"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["dashboard.html", "injectedScript.js"],
            "matches": ["https://steamcommunity.com/*"]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
